% layout 'user', title => 'New user';
<h2>New user</h2>
%= include 'users/_form', caption => 'Create', target => 'store_user'

% if ($error) {
		<div class="error" style="color: red">
				<small> <%= $error %> </small>
		</div>
%}

% if ($message) {
		<div class="error" style="color: green">
				<small> <%= $message %> </small>
		</div>
%}
