% layout 'user', title => 'Edit user';
<h2>Edit user</h2>
%= include 'users/_form', caption => 'Update', target => 'update_user'
%= button_to Remove => remove_user => {id => $user->{id}}

% if ($error) {
		<div class="error" style="color: red">
				<small> <%= $error %> </small>
		</div>
%}

% if ($message) {
		<div class="error" style="color: green">
				<small> <%= $message %> </small>
		</div>
%}
